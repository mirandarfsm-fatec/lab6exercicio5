<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="barra">
		<pattern value="/" />
		<view-id value="/pages/login/login.jsf" />
	</url-mapping>

	<url-mapping id="login">
		<pattern value="/login/" />
		<view-id value="/pages/login/login.jsf" />
	</url-mapping>

	<url-mapping id="home">
		<pattern value="/home/" />
		<view-id value="/pages/principal/index.jsf" />
	</url-mapping>
	
	<url-mapping id="perfil">
		<pattern value="/perfil/" />
		<view-id value="/pages/perfil/perfil.jsf" />
	</url-mapping>

	<url-mapping id="localizador">
		<pattern value="/localizador/" />
		<view-id value="/pages/localizador/localizador.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-usuario-lista">
		<pattern value="/administracao/cadastro/usuario/" />
		<view-id value="/pages/cadastro/usuario/cadastro-usuario-lista.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-usuario-form">
		<pattern value="/administracao/cadastro/usuario/#{id}" />
		<view-id value="/pages/cadastro/usuario/cadastro-usuario-formulario.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-usuario-detalhes">
		<pattern value="/administracao/cadastro/usuario/#{id}/detalhes" />
		<view-id value="/pages/cadastro/usuario/cadastro-usuario-detalhes.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-encomenda-lista">
		<pattern value="/administracao/cadastro/encomenda/" />
		<view-id value="/pages/cadastro/encomenda/cadastro-encomenda-lista.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-encomenda-form">
		<pattern value="/administracao/cadastro/encomenda/#{id}" />
		<view-id value="/pages/cadastro/encomenda/cadastro-encomenda-formulario.jsf" />
	</url-mapping>

	<url-mapping id="cadastro-encomenda-detalhes">
		<pattern value="/administracao/cadastro/encomenda/#{id}/detalhes" />
		<view-id value="/pages/cadastro/encomenda/cadastro-encomenda-detalhes.jsf" />
	</url-mapping>

</pretty-config>